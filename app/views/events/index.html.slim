  thead
    tr
      th title
      th start
      th end
      th limit
      th closed

  tbody
    - @events.each do |event|
      tr class=["clickable"] data-event-id=event.id data-href="./events/"
        td = event.title
        td = event.start_date
        td = event.end_date
        td = event.absence_limit
